<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_button"
    android:orientation="vertical"
    tools:context=".ProfileEditPersonalActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mtAddUserToolBar"
            style="@style/CustomMaterialToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_for_app"
            app:title="Personal Data"
            app:titleCentered="true"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/app_font"
                    android:text="Country living in"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_bg"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/etCountry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/transparent_edittext_border"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                        android:fontFamily="@font/app_font"
                        android:gravity="center_vertical"
                        android:hint="Select Your Country"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/app_font"
                        android:text="State Living In" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/white_bg"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/etState"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:capitalize="words"
                            android:background="@drawable/transparent_edittext_border"
                            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                            android:fontFamily="@font/app_font"
                            android:gravity="center_vertical"
                            android:hint="State"
                            android:textColor="@color/black" />

                        <!--                            <Spinner-->
                        <!--                                android:id="@+id/etAddUserStateOfResidence"-->
                        <!--                                android:layout_width="0dp"-->
                        <!--                                android:layout_height="30dp"-->
                        <!--                                android:layout_weight=".2"-->
                        <!--                                android:clickable="true"-->
                        <!--                                android:focusable="true"-->
                        <!--                                android:focusableInTouchMode="false"-->
                        <!--                                android:importantForAutofill="no"-->
                        <!--                                android:maxLines="1"-->
                        <!--                                app:showSearch="true"-->
                        <!--                                app:sort="true" />-->


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/app_font"
                        android:text="City Living In" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/white_bg"
                        android:fontFamily="@font/app_font"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/etCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginStart="8dp"
                            android:capitalize="words"
                            android:background="@drawable/transparent_edittext_border"
                            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                            android:fontFamily="@font/app_font"
                            android:gravity="center_vertical"
                            android:hint="City"
                            android:textColor="@color/black" />

                        <!--                            <Spinner-->
                        <!--                                android:id="@+id/etAddUserResidenceStatus"-->
                        <!--                                android:layout_width="0dp"-->
                        <!--                                android:layout_height="30dp"-->
                        <!--                                android:clickable="true"-->
                        <!--                                android:layout_weight=".2"-->
                        <!--                                android:focusable="true"-->
                        <!--                                android:focusableInTouchMode="false"-->
                        <!--                                android:importantForAutofill="no"-->
                        <!--                                android:maxLines="1"-->
                        <!--                                app:showSearch="true"-->
                        <!--                                app:sort="true" />-->


                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/etCountryNameShortReg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_bg"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/italic"
                    android:hint="Enter Your Country"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvmarital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/app_font"
                android:text="Marital Status"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_bg"
                android:orientation="horizontal"
                tools:ignore="UselessParent">


                <TextView
                    android:id="@+id/etMaritalStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_edittext_border"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:editable="true"
                    android:enabled="true"
                    android:fontFamily="@font/app_font"
                    android:gravity="center_vertical"
                    android:hint="Select Marital Status"

                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    tools:ignore="Deprecated,Suspicious0dp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/app_font"
                android:text="Date of Birth"

                android:textColor="@color/white"

                />

            <TextView
                android:id="@+id/mbDatePicker"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/white_bg"
                android:drawableEnd="@drawable/ic_outline_date_range_24"
                android:drawableTint="@color/colorPrimary"
                android:fontFamily="@font/app_font"
                android:gravity="center"
                android:hint="Select D.O.B"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="5dp"
                app:iconGravity="end" />

            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/app_font"
                android:text="Height"
                android:textColor="@color/white" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_bg"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/etHeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_edittext_border"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:editable="true"
                    android:fontFamily="@font/app_font"
                    android:gravity="center_vertical"
                    android:hint="Select Your Height"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    tools:ignore="Deprecated" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/app_font"
                android:text="Religion"
                android:textColor="@color/white"

                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/white_bg"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/tvUserReligion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_edittext_border"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                android:fontFamily="@font/app_font"
                android:gravity="center_vertical"
                android:hint="Select Your Religion"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>
            <TextView
                android:id="@+id/tvDiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/app_font"
                android:text="Diet"
                android:textColor="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_bg"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/etDiet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_edittext_border"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:editable="false"
                    android:enabled="true"
                    android:fontFamily="@font/app_font"
                    android:gravity="center_vertical"
                    android:hint="Select Your Diet"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    tools:ignore="Deprecated" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Location"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"

                />

            <EditText
                android:id="@+id/etAddUserLocation"
                style="@style/PersonalDataTextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Type your Location..."
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/llCast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/italic"
                    android:text="Caste"
                    android:textColor="@color/colorPrimary"

                    />

                <TextView
                    android:id="@+id/tvUserCommunity"
                    style="@style/PersonalDataTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:fontFamily="@font/italic"
                    android:gravity="center_vertical"
                    android:hint="Select your cast"
                    android:padding="10dp" />
            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveReg"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/app_font"
                android:text="Save"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_weight="0.8"
                android:drawableStart="@drawable/ic_baseline_star_rate_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/app_font"
                android:gravity="center_vertical"
                android:text="All fields are mandatory. "
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>