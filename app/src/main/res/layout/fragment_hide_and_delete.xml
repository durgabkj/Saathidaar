<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HideAndDeleteFragment">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hide / Delete Profile"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/italic"
            android:padding="8dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content"
                    android:translationZ="20dp"
                    android:elevation="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/italic"
                            android:background="@drawable/gradient_button"
                            android:textColor="@color/white"
                            android:text="Hide profile"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioGroup">

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="One week"
                                android:fontFamily="@font/italic"
                                android:checked="false" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Two week"
                                android:fontFamily="@font/italic"
                                android:checked="false"
                                />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="One Monthly"
                                android:id="@+id/radioButton"
                                android:fontFamily="@font/italic"
                                android:checked="false" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:fontFamily="@font/italic"
                                android:layout_height="wrap_content"
                                android:text="Two Monthly"
                                android:checked="false"
                                />
                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content"
                    android:translationZ="20dp"
                    android:elevation="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/italic"
                            android:background="@drawable/gradient_button"
                            android:textColor="@color/white"
                            android:text="Un-Hide Profile"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                           >

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Activate"
                                android:fontFamily="@font/italic"
                                android:checked="false" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="De-Activate"
                                android:fontFamily="@font/italic"
                                android:checked="false"
                                />
                        </RadioGroup>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>




    </LinearLayout>

