<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDECEC"
    android:orientation="vertical"
    tools:context=".FamilyProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family"
                android:fontFamily="@font/italic"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_gravity="center"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvTodayMatch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:elevation="20dp"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/tvfs"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/italic"
                            android:layout_gravity="center"
                            android:text="Father's Status" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_edit_text"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            tools:ignore="UselessParent">

                            <TextView
                                android:id="@+id/etFStatus"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:fontFamily="@font/italic"
                                android:layout_weight="1"
                                android:editable="false"
                                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:hint="select Father Status"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/transparent_edittext_border"
                                tools:ignore="Deprecated" />




                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_gravity="center"
                            android:text="Company Name" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:id="@+id/etFatherCompanyName"
                            style="@style/PersonalDataTextView"
                            android:hint="Enter Company Name"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llDesignation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_gravity="center"
                            android:text="Designation" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:id="@+id/etFatherDesignation"
                            style="@style/PersonalDataTextView"
                            android:hint="Enter Designation"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llBusiness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_gravity="center"
                            android:text="Nature of Business" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:id="@+id/etFatherNatureBusiness"
                            style="@style/PersonalDataTextView"
                            android:hint="Nature of Business"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/tvms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/italic"
                            android:layout_gravity="center"
                            android:text="Mother's Status" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_edit_text"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            tools:ignore="UselessParent">


                            <TextView
                                android:id="@+id/etMStatus"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:fontFamily="@font/italic"
                                android:layout_weight="1"
                                android:editable="false"
                                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:hint="select Father Status"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/transparent_edittext_border"
                                tools:ignore="Deprecated" />



                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_gravity="center"
                            android:text="Company Name" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:id="@+id/etMotherCompanyName"
                            style="@style/PersonalDataTextView"
                            android:hint="Enter Company Name"/>

                    </LinearLayout>

                    <LinearLayout
                       android:id="@+id/llMNatureBusiness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_gravity="center"
                            android:text="Nature of Business" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:id="@+id/etMotherNatureBusiness"
                            style="@style/PersonalDataTextView"
                            android:hint="Nature of Business"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llMDesignation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_gravity="center"
                            android:text="Designation" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:id="@+id/etMotherDesignation"
                            style="@style/PersonalDataTextView"
                            android:hint="Enter Designation"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/italic"
                            android:layout_gravity="center"
                            android:text="Family Location" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/italic"
                            android:id="@+id/etAddUserFamilyLocation"
                            style="@style/PersonalDataTextView"
                            android:hint="Example,Mumbai,India"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_gravity="center"
                            android:text="Native place" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:id="@+id/etNativePalace"

                            android:fontFamily="@font/italic"
                            style="@style/PersonalDataTextView"
                            android:hint="Enter native place"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/tvSibling"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/italic"
                            android:layout_gravity="start"
                            android:text="No. of Sibling" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="250dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_edit_text"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            tools:ignore="UselessParent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No.of Brother (s)"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/italic"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:id="@+id/llTodayMatch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:translationZ="20dp"
                                android:layout_margin="10dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:orientation="vertical">


                                    <EditText
                                        android:layout_width="40dp"
                                        android:layout_height="25dp"
                                        android:layout_weight="1"
                                        android:id="@+id/etAddUserBrotherNotMarried"
                                        style="@style/PersonalDataTextView"
                                        android:maxLength="2"
                                        android:textAlignment="center"
                                        android:layout_gravity="center"
                                        android:hint="0"/>

                                    <TextView
                                        android:id="@+id/tvTodayMatchTeamName1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="9dp"
                                        android:fontFamily="@font/italic"
                                        android:layout_gravity="center"
                                        android:text="Not married"


                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="40dp"
                                        android:scaleType="centerCrop"
                                        android:layout_gravity="center"
                                        android:src="@drawable/rbmen" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.2"
                                    android:orientation="vertical">

                                    <EditText
                                        android:layout_width="40dp"
                                        android:layout_height="25dp"
                                        android:layout_weight="1"
                                        android:id="@+id/etAddUserBrotherMarried"
                                        style="@style/PersonalDataTextView"
                                        android:maxLength="2"
                                        android:textAlignment="center"
                                        android:layout_gravity="center"
                                        android:hint="0"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="9sp"
                                        android:fontFamily="@font/italic"
                                        android:layout_gravity="center"
                                        android:text="Married"
                                        />
                                </LinearLayout>

                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No.of Sister (s)"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="20dp"
                                android:translationZ="20dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:orientation="vertical">


                                    <EditText
                                        android:id="@+id/etAddUserSisterNotMarried"
                                        style="@style/PersonalDataTextView"
                                        android:layout_width="40dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:hint="0"
                                        android:maxLength="2"
                                        android:textAlignment="center" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Not married"
                                        android:fontFamily="@font/italic"
                                        android:textSize="9sp"


                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/rbfemale" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.2"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/etAddUserSisterMarried"
                                        style="@style/PersonalDataTextView"
                                        android:layout_width="40dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:hint="0"
                                        android:maxLength="2"
                                        android:textAlignment="center" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Married"
                                        android:fontFamily="@font/italic"
                                        android:textSize="9sp"


                                        />


                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/tvft"
                            android:layout_width="0dp"
                            android:fontFamily="@font/italic"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_gravity="center"
                            android:text="Family Type" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_edit_text"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            tools:ignore="UselessParent">

                            <TextView
                                android:id="@+id/etF_Type"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:fontFamily="@font/italic"
                                android:layout_weight="1"
                                android:editable="false"
                                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:hint="select Father Status"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/transparent_edittext_border"
                                tools:ignore="Deprecated" />




                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/tvfa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/italic"
                            android:layout_gravity="center"
                            android:text="Family Affluence" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_edit_text"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            tools:ignore="UselessParent">


                            <TextView
                                android:id="@+id/etF_Affluence"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:fontFamily="@font/italic"
                                android:layout_weight="1"
                                android:editable="false"
                                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:hint="select Father Status"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/transparent_edittext_border"
                                tools:ignore="Deprecated"/>


                        </LinearLayout>



                    </LinearLayout>


                    <TextView
                        android:id="@+id/btnFsave"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                    android:background="@drawable/gradient_button"
                   android:layout_marginTop="20dp"
                        android:text="Update"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/italic"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

</ScrollView>
</LinearLayout>