<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmailAndSmsAlertFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="My Alerts Manager"
        android:textAlignment="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:elevation="20dp"
                android:translationZ="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/gradient_button"
                        android:fontFamily="@font/italic"
                        android:padding="5dp"
                        android:text="Premium Matches Email"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/italic"
                        android:text="Alert you receive every time someone contacts you receive a response to a contact initiated by you Get" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/gray_dark"
                        android:fontFamily="@font/italic"
                        android:padding="5dp"
                        android:text="Alert"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rbPremiumDaily"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/italic"
                            android:text="Daily" />

                        <RadioButton
                            android:id="@+id/rbPremiumWeekly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/italic"
                            android:text="Weekly" />

                        <RadioButton
                            android:id="@+id/rbPremiumMonthly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/italic"

                            android:text="Monthly" />

                        <RadioButton
                            android:id="@+id/rbPremiumUnsubscribe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/italic"
                            android:text="Unsubscribe" />
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="20dp"
                android:translationZ="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/gradient_button"
                        android:fontFamily="@font/italic"
                        android:padding="5dp"
                        android:text="Recent Visitors Email"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/italic"
                        android:text="All SMS alert will be sent to you on this mobile phone number 987654321" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/gray_dark"
                        android:fontFamily="@font/italic"
                        android:padding="5dp"
                        android:text="Alert"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rbVisitorsDaily"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/italic"
                            android:text="Daily" />

                        <RadioButton
                            android:id="@+id/rbVisitorsWeekly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/italic"
                            android:text="Weekly" />

                        <RadioButton
                            android:id="@+id/rbVisitorsMonthly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/italic"
                            android:text="Monthly" />

                        <RadioButton
                            android:id="@+id/rbVisitorsUnsubscribe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/italic"
                            android:text="Unsubscribe" />
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="20dp"
                android:translationZ="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/gradient_button"
                        android:fontFamily="@font/italic"
                        android:padding="5dp"
                        android:text="Today's Matches Email"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/italic"
                        android:text="All SMS alert will be sent to you on this mobile phone number 987654321" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/gray_dark"
                        android:padding="5dp"
                        android:text="Alert"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/radioGroup3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rbTodayMatchDaily"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Daily" />

                        <RadioButton
                            android:id="@+id/rbTodayMatchWeekly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/italic"
                            android:text="Weekly" />

                        <RadioButton
                            android:id="@+id/rbTodayMatchMonthly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/italic"
                            android:text="Monthly" />

                        <RadioButton
                            android:id="@+id/rbTodayMatchUnsubscribe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="@font/italic"
                            android:text="Unsubscribe" />
                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

