<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EmailAndSmsAlertFragment">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:text="My Alerts Manager"
      android:textAlignment="center"
      android:padding="8dp"/>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
      >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_marginTop="10dp"
             android:layout_margin="20dp"
             android:layout_height="wrap_content"
             android:translationZ="20dp"
             android:elevation="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:padding="5dp"
                   android:fontFamily="@font/italic"
                   android:textStyle="bold"
                   android:background="@drawable/gradient_button"
                   android:textColor="@color/white"
                   android:text="Premium Match Mail"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/italic"
                   android:text="Alert you receive every time someone contacts you receive a response to a contact initiated by you Get"
                   android:layout_margin="8dp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:padding="5dp"
                   android:fontFamily="@font/italic"
                   android:background="@color/gray_dark"
                   android:textStyle="bold"
                   android:text="Alert"/>

               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/radioGroup">

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Daily"
                      android:fontFamily="@font/italic"
                      android:checked="false" />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Weekly"
                      android:fontFamily="@font/italic"
                      android:checked="false"
                      />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Monthly"
                      android:fontFamily="@font/italic"
                      android:id="@+id/radioButton"
                      android:checked="false" />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Unsubscribe"
                      android:fontFamily="@font/italic"
                      android:id="@+id/radioButton2"
                      android:checked="false"
                      />
               </RadioGroup>

            </LinearLayout>

         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_margin="20dp"
             android:layout_height="wrap_content"
             android:translationZ="20dp"
             android:elevation="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:padding="5dp"
                   android:textStyle="bold"
                   android:fontFamily="@font/italic"
                   android:background="@drawable/gradient_button"
                   android:textColor="@color/white"
                   android:text="Recent Visitors Email"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/italic"
                   android:text="All SMS alert will be sent to you on this mobile phone number 987654321"
                   android:layout_margin="8dp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:padding="5dp"
                   android:fontFamily="@font/italic"
                   android:background="@color/gray_dark"
                   android:textStyle="bold"
                   android:text="Alert"/>

               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Daily"
                      android:fontFamily="@font/italic"
                      android:checked="false" />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Weekly"
                      android:fontFamily="@font/italic"
                      android:checked="false"
                      />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Monthly"
                      android:fontFamily="@font/italic"
                      android:checked="false" />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Unsubscribe"
                      android:fontFamily="@font/italic"
                      android:checked="false"
                      />
               </RadioGroup>

            </LinearLayout>

         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_margin="20dp"
             android:layout_height="wrap_content"
             android:translationZ="20dp"
             android:elevation="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:padding="5dp"
                   android:textStyle="bold"
                   android:fontFamily="@font/italic"
                   android:background="@drawable/gradient_button"
                   android:textColor="@color/white"
                   android:text="Contact Alert"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/italic"
                   android:text="All SMS alert will be sent to you on this mobile phone number 987654321"
                   android:layout_margin="8dp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:padding="5dp"
                   android:background="@color/gray_dark"
                   android:textStyle="bold"
                   android:text="Alert"/>

               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
               >

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Daily"
                      android:checked="false" />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Weekly"
                      android:fontFamily="@font/italic"
                      android:checked="false"
                      />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Monthly"
                      android:fontFamily="@font/italic"
                      android:checked="false" />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Unsubscribe"
                      android:fontFamily="@font/italic"
                      android:checked="false"
                      />
               </RadioGroup>

            </LinearLayout>

         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_margin="20dp"
             android:layout_height="wrap_content"
             android:translationZ="20dp"
             android:elevation="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:padding="5dp"
                   android:textStyle="bold"
                   android:background="@drawable/gradient_button"
                   android:textColor="@color/white"
                   android:text="SMS Alert"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/italic"
                   android:text="All SMS alert will be sent to you on this mobile phone number 987654321"
                   android:layout_margin="8dp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:padding="5dp"
                   android:fontFamily="@font/italic"
                   android:background="@color/gray_dark"
                   android:textStyle="bold"
                   android:text="Alert"/>

               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Daily"
                      android:fontFamily="@font/italic"
                      android:checked="false" />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/italic"
                      android:text="Weekly"
                      android:checked="false"
                      />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Monthly"
                      android:fontFamily="@font/italic"
                      android:checked="false" />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Unsubscribe"
                      android:fontFamily="@font/italic"
                      android:checked="false"
                      />
               </RadioGroup>

            </LinearLayout>

         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_margin="20dp"
             android:layout_height="wrap_content"
             android:translationZ="20dp"
             android:elevation="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:padding="5dp"
                   android:textStyle="bold"
                   android:background="@drawable/gradient_button"
                   android:fontFamily="@font/italic"
                   android:textColor="@color/white"
                   android:text="Message Receiver Alert"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/italic"
                   android:text="All SMS alert will be sent to you on this mobile phone number 987654321"
                   android:layout_margin="8dp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:padding="5dp"
                   android:fontFamily="@font/italic"
                   android:background="@color/gray_dark"
                   android:textStyle="bold"
                   android:text="Alert"/>

               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
               >

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Daily"
                      android:fontFamily="@font/italic"
                      android:checked="false" />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Weekly"
                      android:fontFamily="@font/italic"
                      android:checked="false"
                      />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Monthly"
                      android:fontFamily="@font/italic"
                      android:checked="false" />

                  <RadioButton
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Unsubscribe"
                      android:fontFamily="@font/italic"
                      android:checked="false"
                      />
               </RadioGroup>

            </LinearLayout>

         </androidx.cardview.widget.CardView>
      </LinearLayout>
   </ScrollView>




</LinearLayout>