<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ForgetActivity">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:title="Forget password"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:navigationIconTint="@color/black"
            app:titleTextColor="@color/black" />
    </com.google.android.material.appbar.AppBarLayout>






    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forgetpass"
        android:layout_margin="30dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Did someone forget their password ?"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:fontFamily="@font/italic"
        android:textColor="@color/black"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="That's ok..."
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:fontFamily="@font/italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just entered email address you've used to register with us and we'll send you a password"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:fontFamily="@font/italic"/>

    <EditText
        android:id="@+id/etForgetEmailID"
        style="@style/PersonalDataTextView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/colorPrimary"
        android:background="@drawable/edt_text_border"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:fontFamily="@font/italic"
        android:hint="Email ID"
        android:inputType="text" />

    <TextView
        android:id="@+id/btnForgetPass"
        android:layout_width="200dp"
        android:layout_height="50dp"
       android:layout_gravity="center"
        android:padding="14dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/italic"
        android:background="@drawable/gradient_button"
        android:textAlignment="center"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="normal" />

</LinearLayout>