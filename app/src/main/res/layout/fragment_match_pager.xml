<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2Details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />


   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <FrameLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical">

           <LinearLayout
               android:id="@+id/llPrevious"
               android:layout_width="40dp"
               android:layout_height="80dp"
               android:background="@drawable/previous_button_bg"
               android:orientation="horizontal"
               android:padding="10dp">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_arrow_left_2827" />


           </LinearLayout>

       </FrameLayout>

       <FrameLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical|end">

           <LinearLayout
               android:id="@+id/llNext"
               android:layout_width="40dp"
               android:layout_height="80dp"
               android:background="@drawable/next_previous_bg"
               android:orientation="horizontal"
               android:padding="10dp">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_arrow_next_2825" />


           </LinearLayout>

       </FrameLayout>

   </FrameLayout>

</FrameLayout>