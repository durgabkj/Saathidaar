<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HoroscopeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Birth and Horoscope Details"
        android:layout_gravity="center"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/italic"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvShowDetails"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        android:translationZ="10dp"
        android:elevation="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="@font/italic"
            android:text="Country of Birth"/>

        <TextView
            android:id="@+id/tvCountryOfBirth"
            android:layout_width="0dp"
            android:hint="Add Details"
            android:textColorHint="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/italic"
            tools:ignore="DuplicateIds" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="@font/italic"
            android:text="City of Birth"/>

        <TextView
            android:id="@+id/tvCityofBirth"
            android:layout_width="0dp"
            android:hint="Add Details"
            android:textColorHint="@color/colorPrimary"
            android:fontFamily="@font/italic"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="@font/italic"
            android:text="Time of Birth"/>

        <TextView
            android:id="@+id/tvTimeofBirth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/italic"
            android:hint="Add Details"
            android:textColorHint="@color/colorPrimary"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="@font/italic"
            android:text="Manglik"/>

        <TextView
            android:id="@+id/tvManglik"
            android:layout_width="0dp"
            android:fontFamily="@font/italic"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Add Details"
            android:textColorHint="@color/colorPrimary"/>


    </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:clipToOutline="true"
                android:layout_gravity="center"
                android:elevation="20dp"
                android:layout_marginTop="20dp"
                android:translationZ="20dp"
                app:cardMaxElevation="20dp">

                <TextView
                    android:id="@+id/btnEditDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/gradient_button"
                    android:elevation="20dp"
                    android:padding="10dp"
                    android:text="Edit Details"
                     android:textColor="@color/white"
                    android:textStyle="bold"
                    android:translationZ="20dp" />
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvEditDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
android:visibility="gone"
        android:translationZ="10dp"
        android:elevation="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/italic"
                android:text="Country Name"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".MainActivity">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:hint="Select Country">

                    <com.ottego.multipleselectionspinner.MultipleSelection
                        android:id="@+id/acvCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                        android:fontFamily="@font/italic"
                        android:focusableInTouchMode="false"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        app:showSearch="true"
                        app:sort="true" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tvc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:inputType="none"
                android:fontFamily="@font/italic"
                android:text="City of Birth" />

            <EditText
                android:id="@+id/etHoroscopeBirthCity"
                style="@style/PersonalDataTextView"
                android:layout_width="match_parent"
                android:fontFamily="@font/italic"
                android:hint="Enter city of birth"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/italic"
                android:layout_marginTop="20dp"
                android:text="Time of Birth"

                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="3dp"
                        android:background="@drawable/bg_edit_text"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp">

                            <AutoCompleteTextView
                                android:id="@+id/acvHour"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:hint="Hour"
                                android:fontFamily="@font/italic"
                                android:background="@drawable/transparent_edittext_border" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <AutoCompleteTextView
                                android:id="@+id/acvMinutes"
                                android:layout_width="match_parent"
                                android:background="@drawable/transparent_edittext_border"
                                android:layout_height="40dp"
                                android:padding="8dp"
                                android:fontFamily="@font/italic"
                                android:hint="Minutes"
                                android:layout_weight="1" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp">

                            <AutoCompleteTextView
                                android:id="@+id/actvampm"
                                android:layout_width="match_parent"
                                android:background="@drawable/transparent_edittext_border"
                                android:layout_height="40dp"
                                android:padding="8dp"
                                android:hint="A.m/P.m"
                                android:fontFamily="@font/italic"
                                android:layout_weight="1" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/italic"
                android:text="Timing Status"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:background="@drawable/bg_edit_text"
                >
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:background="@drawable/transparent_edittext_border"
                    android:layout_marginStart="8dp">

                    <AutoCompleteTextView
                        android:id="@+id/actvapprox"
                        android:layout_width="match_parent"
                        android:background="@drawable/transparent_edittext_border"
                        android:layout_height="40dp"
                        android:fontFamily="@font/italic"
                        android:hint="Timing Status"
                        android:layout_weight="1"
                        android:padding="8dp"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/italic"
                android:text="Manglik/Chevvai dosham
"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edit_text"
                >
                <RadioGroup
                    android:id="@+id/radioGroup"
                    style="@style/ShapeAppearanceEditTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radio_button_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/italic"
                        android:layout_height="match_parent"
                        android:text="Yes"/>
                    <RadioButton
                        android:id="@+id/radio_button_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/italic"
                        android:layout_marginStart="10dp"
                        android:layout_height="match_parent"
                        android:text="No"/>

                    <RadioButton
                        android:id="@+id/radio_button_3"
                        android:layout_width="0dp"
                        android:fontFamily="@font/italic"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:layout_height="match_parent"
                        android:text="Don't Know"/>

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnSaveDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Details"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/gradient_button"
                    android:layout_gravity="center"/>








                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/italic"
                    android:layout_margin="5dp"
                    android:text="or"/>

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/italic"
                    android:textColor="@color/teal_700"
                    android:layout_margin="5dp"
                    android:text="Cancel"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>










</LinearLayout>