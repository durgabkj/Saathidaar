<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HideDeleteProfileFragment">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="Profile Setting"
        android:textAlignment="center" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="20dp"
            android:translationZ="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/gradient_button"
                    android:fontFamily="@font/italic"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="Hide/Un-Hide Profile"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


                    <CheckBox
                        android:id="@+id/chkbUnHide"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/italic"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="Hide Profile"/>




                <RadioGroup
                    android:id="@+id/radioGroupHide"
                    android:layout_width="match_parent"
                    android:checkedButton="@id/rbHide"
                    android:layout_height="wrap_content">



                    <View
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"/>

                    <RadioButton
                        android:id="@+id/rbHideUnhideOneMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/italic"
                        android:text="One Month" />



                    <RadioButton
                        android:id="@+id/rbHideUnhideThreeMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/italic"
                        android:text="Three Months" />

                    <RadioButton
                        android:id="@+id/rbHideUnhideSixMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/italic"
                        android:text="Six Months" />

                    <View
                        android:id="@+id/v1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"/>
                    <RadioButton
                        android:id="@+id/rbHide"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/italic"
                        android:text="Un-Hide Profile" />
                </RadioGroup>



<!--                <CheckBox-->
<!--                    android:id="@+id/chkbUnHide"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:fontFamily="@font/italic"-->
<!--                    android:textStyle="bold"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:text="Un-Hide Profile"/>-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvSaveHideUnhide"
                        android:layout_width="100dp"
                        android:layout_height="30dp"

                        android:background="@drawable/gradient_button"
                        android:fontFamily="@font/italic"
                        android:gravity="center"
                        android:text="save"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvCancelHideUnhide"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/gray_dark"
                        android:fontFamily="@font/italic"
                        android:gravity="center"
                        android:text="Cancel"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCancelHideUnhide1"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/gray_dark"
                        android:fontFamily="@font/italic"
                        android:gravity="center"
                        android:text="Cancel"
                        android:visibility="gone"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:elevation="20dp"
            android:translationZ="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/gradient_button"
                    android:fontFamily="@font/italic"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Activate/Deactivate Account"
                    android:textColor="@color/white"
                    android:textStyle="bold" />



                <RadioGroup
                    android:id="@+id/radioGroupActivate_dea"
                    android:layout_width="match_parent"
                    android:checkedButton="@id/rbActivate"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbActivate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/italic"
                        android:text="Activate Account" />

                    <RadioButton
                        android:id="@+id/rbDeactivate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/italic"
                        android:text="Deactivate Account" />


                </RadioGroup>

                <TextView
                    android:id="@+id/tvSaveAc_de"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/gradient_button"
                    android:fontFamily="@font/italic"
                    android:gravity="center"
                    android:text="save"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>




</LinearLayout>