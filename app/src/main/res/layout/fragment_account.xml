<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFragment"
    android:orientation="vertical">


    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:selectionRequired="true"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAccountSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="12dp"
                app:chipCornerRadius="2dp"
                android:checkable="true"
                style="@style/CustomChipChoiceStyle"
                app:rippleColor="@color/colorPrimary"
                app:checkedIconEnabled="false"
                android:elevation="10dp"
                android:fontFamily="@font/italic"
                android:textSelectHandle="@color/white"
                android:translationZ="10dp"
                android:text="Account Settings" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEmailSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:translationZ="10dp"
                android:layout_margin="4dp"
                app:checkedIconEnabled="false"
                style="@style/CustomChipChoiceStyle"
                android:checkable="true"
                android:padding="12dp"
                android:text="Email Setting" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:checkedIconEnabled="false"
                android:checkable="true"
                android:elevation="10dp"
                android:translationZ="10dp"
                style="@style/CustomChipChoiceStyle"
                android:padding="12dp"
                android:text="Privacy Options" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHideUnHide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:checkable="true"
                android:elevation="10dp"
                android:translationZ="10dp"
                app:checkedIconEnabled="false"
                style="@style/CustomChipChoiceStyle"
                android:padding="12dp"
                android:text="Hide / Unhide Profile" />



        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcvAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.ottego.saathidaar.SwipeDisabledPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="NotSibling"
        android:id="@+id/vpAccount"
        />


</LinearLayout>