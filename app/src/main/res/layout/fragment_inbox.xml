<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupInbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:selectionRequired="true"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipInvitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="12dp"
                app:chipCornerRadius="2dp"
                android:checkable="true"
                style="@style/CustomChipChoiceStyle"
                app:rippleColor="@color/colorPrimary"
                app:checkedIconEnabled="false"
                android:elevation="10dp"
                android:textSelectHandle="@color/white"
                android:translationZ="10dp"
                android:text="Invitation" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:translationZ="10dp"
                android:layout_margin="4dp"
                app:checkedIconEnabled="false"
                style="@style/CustomChipChoiceStyle"
                android:checkable="true"
                android:padding="12dp"
                android:text="Accept" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:checkedIconEnabled="false"
                android:checkable="true"
                android:elevation="10dp"
                android:translationZ="10dp"
                style="@style/CustomChipChoiceStyle"
                android:padding="12dp"
                android:text="Sent" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:checkable="true"
                android:elevation="10dp"
                android:translationZ="10dp"
                app:checkedIconEnabled="false"
                style="@style/CustomChipChoiceStyle"
                android:padding="12dp"
                android:text="Delete" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:checkable="true"
                android:elevation="10dp"
                android:translationZ="10dp"
                app:checkedIconEnabled="false"
                style="@style/CustomChipChoiceStyle"
                android:padding="12dp"
                android:text="Block" />


        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <com.ottego.saathidaar.SwipeDisabledPager
        android:layout_width="match_parent"
        tools:ignore="NotSibling"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:id="@+id/vpInbox"
        />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcvInbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>