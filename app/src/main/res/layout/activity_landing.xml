<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LandingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        tools:ignore="Suspicious0dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|end"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:text="Login"
                android:fontFamily="@font/italic"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />
        </FrameLayout>


    </LinearLayout>
    <!--     </com.google.android.material.appbar.AppBarLayout> -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/landing_page"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:background="@drawable/landing">

                <TextView
                    android:id="@+id/tv_land_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="210dp"
                    android:gravity="center"
                    android:fontFamily="@font/italic"
                    android:text="...because a marriage is between two families"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/login_title"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:elevation="20dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:translationZ="20dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:drawableStart="@drawable/rbmen"
                            android:elevation="4dp"
                            android:padding="5dp"
                            android:shadowColor="#000000"
                            android:shadowDx="1.5"
                            android:shadowDy="1.3"
                            android:shadowRadius="0.1"
                            android:textAlignment="center"
                            android:textColor="@drawable/text_color" />

                        <RadioButton
                            android:id="@+id/female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:drawableStart="@drawable/rbfemale"
                            android:elevation="4dp"
                            android:padding="5dp"
                            android:shadowColor="#000000"
                            android:shadowDx="1.5"
                            android:shadowDy="1.3"
                            android:shadowRadius="0.1"
                            android:textAlignment="center"
                            android:textColor="@drawable/text_color" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_register"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txtfirstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edt_text_border"
                        android:drawableStart="@drawable/ic_baseline_user_24"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/italic"
                        android:hint="Firstname"
                        android:padding="8dp"
                        android:textColor="@color/black" />

                    <Space
                        android:layout_width="6dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/txtlastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edt_text_border"
                        android:drawableStart="@drawable/ic_baseline_user_24"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/italic"
                        android:hint="Lastname"
                        android:padding="8dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtmobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_text_border"
                    android:drawableStart="@drawable/ic_baseline_stay_primary_portrait_24"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/italic"
                    android:hint="Mobile Number"
                    android:maxLength="10"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/txtemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_text_border"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/italic"
                    android:hint="EmailID"
                    android:padding="8dp"
                    android:textColor="@color/black" />

<!--                <EditText-->
<!--                    android:id="@+id/txtpassword"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:background="@drawable/edt_text_border"-->
<!--                    android:drawableStart="@drawable/ic_baseline_lock_24"-->
<!--                    android:drawablePadding="8dp"-->
<!--                    android:drawableTint="@color/black"-->
<!--                    android:fontFamily="@font/italic"-->
<!--                    android:hint="Password"-->
<!--                    android:padding="8dp"-->
<!--                    android:textColor="@color/black" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/spinner_border"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:focusable="true"

                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/italic"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        app:showSearch="true"
                        app:sort="true" />


                </LinearLayout>

                <TextView
                    android:id="@+id/btn_register"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_hover"
                    android:fontFamily="@font/italic"
                    android:padding="8dp"
                    android:text="Register"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/login_title"
                android:layout_gravity="center"
                android:background="@color/white"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/italic"
                    android:gravity="center"
                    android:text="Why Choose Saathidaar"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/italic"
                        android:gravity="center_horizontal"
                        android:padding="0dp"
                        android:text="Saathidaar is different from other matchmaking sites because of some unique benefites that every parent will find highly useful"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="120dp"
                        android:background="@drawable/user_profile_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_person_24"></ImageView>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="220dp"
                        android:fontFamily="@font/italic"
                        android:gravity="center"
                        android:text="Get Complete Family Information"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_marginTop="270dp"
                            android:fontFamily="@font/italic"
                            android:gravity="center_horizontal"
                            android:padding="0dp"
                            android:text="Saathidaar is different from other matchmaking sites because of some unique benefites that every parent will find highly useful"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="370dp"
                            android:background="@drawable/user_profile_background">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_supervisor_account_24"></ImageView>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="490dp"
                            android:fontFamily="@font/italic"
                            android:gravity="center"
                            android:text="Get Complete Family Information"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_marginTop="540dp"
                                android:fontFamily="@font/italic"
                                android:gravity="center_horizontal"
                                android:padding="0dp"
                                android:text="Saathidaar is different from other matchmaking sites because of some unique benefites that every parent will find highly useful"
                                android:textColor="@color/black"
                                android:textSize="14dp" />

                            <RelativeLayout
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="630dp"
                                android:background="@drawable/user_profile_background">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_person_24" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ViewFlipper
                        android:id="@+id/flipper"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                   android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Company |"
                        android:textColor="@color/black"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tvHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@id/tvCompany"
                        android:text=" Home |"
                        android:textColor="@color/black"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tvCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@id/tvHome"
                        android:text=" Terms and Conditions"
                        android:textColor="@color/black"
                        android:textSize="10dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="20dp"
                        android:text="LINKS | Member Login | Member Signup | Customer Support|"
                        android:textColor="@color/black"
                        android:textSize="10dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="20dp"
                        android:text="NEWSLETTER"
                        android:textColor="@color/black"
                        android:textSize="10dp" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/italic"
                        android:text="Be the first to know about new arrivals,look books,sales and promos!"
                        android:textColor="@color/black"
                        android:textSize="10dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
