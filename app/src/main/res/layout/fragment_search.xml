<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:padding="3dp"
            android:text="Basic Search"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    tools:ignore="UselessParent">

                    <EditText
                        android:id="@+id/etFromAgeSearch"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:enabled="true"
                        android:hint="From"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/transparent_edittext_border"
                        tools:ignore="Deprecated" />



                    <Spinner
                        android:id="@+id/sp_minSearch"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight=".4"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false"
                        android:importantForAutofill="no"
                        android:maxLines="0"
                        app:showSearch="true"
                        app:sort="true"
                        tools:ignore="Suspicious0dp"
                        tools:listitem="@layout/dropdown_item" />

                </LinearLayout>


                <Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <!-- Drop down number 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    tools:ignore="UselessParent">


                    <EditText
                        android:id="@+id/etToAgeSearch"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:hint="To"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/transparent_edittext_border"
                        tools:ignore="Deprecated" />


                    <Spinner
                        android:id="@+id/sp_maxSearch"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight=".4"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false"
                        android:importantForAutofill="no"
                        android:maxLines="0"
                        app:showSearch="true"
                        app:sort="true"
                        tools:ignore="Suspicious0dp"
                        tools:listitem="@layout/dropdown_item"  />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Height" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    tools:ignore="UselessParent">

                    <EditText
                        android:id="@+id/etfromHeightSearch"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:hint="From"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/transparent_edittext_border"
                        tools:ignore="Deprecated" />


                    <Spinner
                        android:id="@+id/spFromHeightSearch"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight=".4"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false"
                        android:importantForAutofill="no"
                        android:maxLines="0"
                        app:showSearch="true"
                        app:sort="true"
                        tools:ignore="Suspicious0dp"
                        tools:listitem="@layout/dropdown_item"  />

                </LinearLayout>

                <Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <!-- Drop down number 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    tools:ignore="UselessParent">

                    <EditText
                        android:id="@+id/etToHeightSearch"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:hint="To"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/transparent_edittext_border"
                        tools:ignore="Deprecated" />

                    <Spinner
                        android:id="@+id/spToHeightSearch"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight=".4"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false"
                        android:importantForAutofill="no"
                        android:maxLines="0"
                        app:showSearch="true"
                        app:sort="true"
                        tools:ignore="Suspicious0dp"
                        tools:listitem="@layout/dropdown_item"  />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Marital Status" />

            <TextView
                android:id="@+id/tvMultipleMaritalStatusSearch"
                style="@style/textInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:drawable/editbox_background"
                android:clickable="true"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:drawablePadding="16dp"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:hint="Marital Status"
                android:importantForAutofill="no"
                android:maxLines="1"
                android:padding="12dp"
                app:showSearch="true"
                app:sort="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mother Tongue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:context=".MainActivity">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:hint="Select  Mother Tongue">


                    <com.ottego.multipleselectionspinner.MultipleSelection
                        android:id="@+id/multi_SelectionMotherTongueSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        app:showSearch="true"
                        app:sort="true" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Religion" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/textInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:hint="Select religion">

                <com.ottego.multipleselectionspinner.MultipleSelection
                    android:id="@+id/tvMultipleReligionSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:importantForAutofill="no"
                    android:maxLines="1"
                    app:showSearch="true"
                    app:sort="true" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cast" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/textInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:hint="Select cast">

                <com.ottego.multipleselectionspinner.MultipleSelection
                    android:id="@+id/tvMultipleCastSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:importantForAutofill="no"
                    android:maxLines="1"
                    app:showSearch="true"
                    app:sort="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:padding="3dp"
                    android:text="Location Details"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Country" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".MainActivity">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:hint="Select Country">


                    <com.ottego.multipleselectionspinner.MultipleSelection
                        android:id="@+id/multi_SelectionCountrySearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        app:showSearch="true"
                        app:sort="true" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="State" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/textInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:hint="Select state">

                <com.ottego.multipleselectionspinner.MultipleSelection
                    android:id="@+id/tvMultipleStateSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:importantForAutofill="no"
                    android:maxLines="1"
                    app:showSearch="true"
                    app:sort="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="City" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/textInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:hint="Select city">

                <com.ottego.multipleselectionspinner.MultipleSelection
                    android:id="@+id/tvMultipleCitySearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:importantForAutofill="no"
                    android:maxLines="1"
                    app:showSearch="true"
                    app:sort="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"/>


        </LinearLayout>




    </ScrollView>

</LinearLayout>