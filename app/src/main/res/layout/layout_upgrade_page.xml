<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_marginEnd="10dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvCardName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Silver"
                android:fontFamily="@font/italic"
                android:translationZ="20dp"
                android:transformPivotX="10dp"
                android:textSize="18dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:background="@drawable/gradient_button"
                android:transformPivotY="10dp"
                android:textAllCaps="true"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tvMonths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Month"
                android:fontFamily="@font/italic"
                android:textStyle="bold"
                android:textAllCaps="true"/>
        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/line_gradient"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15% off"
                android:textStyle="bold"
                android:fontFamily="@font/italic"
                android:textAllCaps="true"
                android:textColor="#00C853"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹5,120"
                android:fontFamily="@font/italic"
                android:textAllCaps="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvPriceUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹4332"
            android:fontFamily="@font/italic"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹1,451 per month"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/italic"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/btnDashboard"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:gravity="center"
            android:text="Continue"
            android:fontFamily="@font/italic"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="0.1"
            android:background="@drawable/radio_selector"
            android:textColor="@drawable/text_color"
            android:elevation="4dp"
            android:button="@android:color/transparent"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send unlimited messages"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_check_black_24dp"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/italic"
                android:textAllCaps="true"/>

            <View
                android:layout_width="250dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/line_gradient"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View upto 600 contact numbers"
                android:textSize="14dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/italic"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_check_black_24dp"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"/>
            <View
                android:layout_width="250dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/italic"
                android:layout_gravity="center"
                android:background="@drawable/line_gradient"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standout from other profile"
                android:textSize="14dp"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:fontFamily="@font/italic"
                android:drawableStart="@drawable/ic_check_black_24dp"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"/>
            <View
                android:layout_width="250dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/italic"
                android:layout_gravity="center"
                android:background="@drawable/line_gradient"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lets Matches contact you directly "
                android:textSize="14dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_check_black_24dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/italic"
                android:textAllCaps="true"/>
        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>

